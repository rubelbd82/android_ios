<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:src="@drawable/greenbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:text="Sign Up"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_margin="5dp"
            android:background="@drawable/btn_transparent_border"
            android:textColor="@color/textColorWhite"
            android:onClick="actionSignup"
            />
        <Button
            android:text="Home"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:background="@drawable/btn_transparent_border"
            android:textColor="@color/textColorWhite"
            android:layout_margin="5dp"
            android:onClick="actionHome"
            />
    </LinearLayout>

    <ImageView
        android:src="@drawable/placeholder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:scaleType="fitCenter"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Already have an account?"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="actionSignin"
        android:id="@+id/signin"

        android:background="@drawable/btn_transparent_underline"
        android:textColor="@color/primary_text_default_material_dark" />
</RelativeLayout>