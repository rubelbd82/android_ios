<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <!--<ImageView-->
    <!--android:id="@+id/imgDrawer"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <com.pkmmte.view.CircularImageView
        android:id="@+id/imgDrawer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        app:shadow="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:gravity="right"
        android:padding="15dp"
        android:text="EdikOdik.com"
        android:textColor="@color/textColorWhite" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:weightSum="3"

            >



            <LinearLayout
                android:id="@+id/verified"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_youtube"
                    app:backgroundTint="@color/colorAmber"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="youtube"/>

                <!--<Button-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/verified"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->

                <!--/>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_instagram"
                    app:backgroundTint="@color/colorBlue"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="instagram"/>

                <!--<Button-->
                <!--android:id="@+id/btnMap"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/map"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->
                <!--/>-->

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_google_plus"
                    app:backgroundTint="@color/colorRed"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="google_plus"/>

                <!--<Button-->
                <!--android:id="@+id/btnShare"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/share"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->
                <!--/>-->

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="right"
            android:orientation="horizontal"

            android:weightSum="3"

            >



            <LinearLayout
                android:id="@+id/verified2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnVerified2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_pinterest"
                    app:backgroundTint="@color/colorBlue"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="pinterest"/>

                <!--<Button-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/verified"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->

                <!--/>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/map2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnMap2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_twitter"
                    app:backgroundTint="@color/colorAmber"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="twitter"/>

                <!--<Button-->
                <!--android:id="@+id/btnMap"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/map"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->
                <!--/>-->

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnShare2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_facebook"
                    app:backgroundTint="@color/colorGreen"
                    app:elevation="2dp"
                    android:onClick="actionSocialMedia"
                    android:tag="facebook"/>

                <!--<Button-->
                <!--android:id="@+id/btnShare"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/share"-->
                <!--android:text=""-->
                <!--android:layout_margin="5dp"-->
                <!--/>-->

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>



